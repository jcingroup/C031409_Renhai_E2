@model DotWeb.ManageUserViewModel
@{
    ViewBag.Caption = MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Title;
    ViewBag.MenuName = MvcSiteMapProvider.SiteMaps.Current.CurrentNode.ParentNode.Title;
}
@section IncludeCSS{}

@section IncludeScript{
    @Html.Partial("Manage/jsCommVar")
    @Html.Partial("Manage/commJSINC")

    <script>
        var aj_MasterPasswordUpdate = '@Url.Action("aj_MasterPasswordUpdate")';
        var Info_ChangePassword_Success = '@Resources.Res.Info_ChangePassword_Success';
    </script>
    <script type="text/javascript" src="~/_Code/Scripts/ctrl/users_changepassword.min.js"></script>
}
@section sidebar{
    @Html.Partial("Manage/vucMenu")
}
<h3>
    @ViewBag.Caption
    <span><i class="fa fa-angle-double-right"></i> @Resources.Res.Info_Edit</span>
</h3>
<form ng-submit="submit()">
    <fieldset class="profile">
        <legend></legend>
        <p>
            <label class="col-xs-2">@Html.Lang(x => x.OldPassword)</label>
            <input class="col-xs-2" type="password" ng-model="@Html.ngName(x => x.OldPassword, Html.ngFD())"
                   maxlength="16"
                   required />
            <em class="text-danger col-xs-1">*</em>
        </p>
        <p>
            <label class="col-xs-2">@Html.Lang(x => x.NewPassword)</label>
            <input class="col-xs-2" type="password" ng-model="@Html.ngName(x => x.NewPassword, Html.ngFD())"
                   maxlength="16"
                   required />
            <em class="text-danger col-xs-1">*</em>
        </p>
        <p>
            <label class="col-xs-2">@Html.Lang(x => x.ConfirmPassword)</label>
            <input class="col-xs-2" type="password" ng-model="@Html.ngName(x => x.ConfirmPassword, Html.ngFD())"
                   maxlength="16"
                   required />
            <em class="text-danger col-xs-1">*</em>
        </p>
    </fieldset>
    <fieldset class="send">
        <button type="submit" class="btn btn-primary"><i class="fa-check"></i> @Resources.Res.Button_Save</button>
    </fieldset>
</form>